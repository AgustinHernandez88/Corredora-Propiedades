<!-- app/views/buildings/show.html.erb -->

<h1>Detalles del Edificio</h1>

<p><strong>Nombre:</strong> <%= @building.name %></p>
<p><strong>Dirección:</strong> <%= @building.address %></p>
<p><strong>Ciudad:</strong> <%= @building.city %></p>

<h2>Departamentos</h2>
<ul>
  <% @apartments.each do |apartment| %>
    <li>Número: <%= apartment.number %></li>
  <% end %>
</ul>

<%= link_to 'Volver a la Lista de Edificios', buildings_path %>
